{
  "manifest_version": 2,
  "name": "mytream-extension",
  "description": "苑永志的测试chrome扩展3",
  "minimum_chrome_version": "52",
  "version": "0.0.1",
  "permissions": ["activeTab","storage", "declarativeContent"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/16x16.png",
      "32": "assets/32x32.png",
      "48": "assets/48x48.png",
      "128": "assets/128x128.png"
    }
  },
  "icons": {
    "16": "assets/16x16.png",
    "32": "assets/32x32.png",
    "48": "assets/48x48.png",
    "128": "assets/128x128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "Opens hello.html"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html"
}